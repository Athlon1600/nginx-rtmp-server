{
  "name": "api_server",
  "version": "0.0.1",
  "scripts": {
    "clean": "rimraf dist node_modules",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node ./dist",
    "serve": "nodemon ./dist --legacy-watch",
    "dev": "concurrently \"npm run watch\" \"npm run serve\""
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.0.0",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^22.17.2",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.2"
  }
}
